---
import Footer from "../components/Footer.astro";
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,300;0,400;0,500;0,600;1,300;1,400;1,500;1,600&display=swap"
			rel="stylesheet"
		/>
	</head>

	<body>
		<slot />
		<Footer />
		<style is:global>
			/* body {
		height: 100vh;
		width: 100vw;
	} */

			:root {
				scroll-behavior: smooth;
				font-family: "Kanit", sans-serif;
				--radius: 0.2rem;
				--gradient: linear-gradient(
					141deg,
					rgba(149, 158, 162, 0.8981793400954132) 0%,
					rgba(128, 191, 218, 0.9037815809917717) 25%,
					rgba(149, 158, 162, 0.9037815809917717) 50%,
					rgba(128, 191, 218, 1) 75%,
					rgba(149, 158, 162, 0.9) 100%
				);
			}

			body {
				margin: 0;
			}

			.centerContents {
				display: flex;
				align-items: center;
				justify-content: center;
			}
		</style>
	</body>
</html>
